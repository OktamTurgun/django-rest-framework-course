# ============================================
# DJANGO SETTINGS
# ============================================
# Generate: python manage.py shell -c "from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())"
SECRET_KEY=

# Environment: development, staging, production
ENVIRONMENT=development

# Debug mode (True for development, False for production)
DEBUG=True

# Comma-separated list of allowed hosts
ALLOWED_HOSTS=127.0.0.1,localhost

# ============================================
# DATABASE
# ============================================
# SQLite for development (leave others empty)
# PostgreSQL for staging/production (fill all fields)
DB_ENGINE=django.db.backends.sqlite3
DB_NAME=db.sqlite3
DB_USER=
DB_PASSWORD=
DB_HOST=localhost
DB_PORT=5432

# ============================================
# REDIS CACHE
# ============================================
REDIS_URL=redis://localhost:6379/0

# ============================================
# CELERY
# ============================================
CELERY_BROKER_URL=redis://localhost:6379/1
CELERY_RESULT_BACKEND=redis://localhost:6379/2

# ============================================
# EMAIL CONFIGURATION
# ============================================
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_HOST_USER=
EMAIL_HOST_PASSWORD=
EMAIL_USE_TLS=True
DEFAULT_FROM_EMAIL=Library System <noreply@library.com>

# ============================================
# OAUTH2 CREDENTIALS
# ============================================
# Google: https://console.cloud.google.com/
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=

# GitHub: https://github.com/settings/developers
GITHUB_CLIENT_ID=
GITHUB_CLIENT_SECRET=

# ============================================
# SENTRY (ERROR TRACKING)
# ============================================
# Get from: https://sentry.io/
SENTRY_DSN=
RELEASE_VERSION=v1.0.0

# ============================================
# CORS
# ============================================
# Comma-separated list of allowed origins for production
CORS_ALLOWED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# ============================================
# AWS S3 (OPTIONAL)
# ============================================
USE_S3=False
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_STORAGE_BUCKET_NAME=
AWS_S3_REGION_NAME=us-east-1

# ============================================
# FIREBASE
# ============================================
FIREBASE_CREDENTIALS_PATH=firebase-credentials.json

# ============================================
# SMS (TWILIO)
# ============================================
SMS_BACKEND=mock
SMS_ENABLED=True
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
TWILIO_PHONE_NUMBER=

# ============================================
# NOTIFICATIONS
# ============================================
PUSH_ENABLED=True
EMAIL_ENABLED=True

# ============================================
# LOCALIZATION
# ============================================
LANGUAGE_CODE=en-us
TIME_ZONE=Asia/Tashkent